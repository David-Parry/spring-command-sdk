{
  "family": "qodo-command-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "cpu": "2048",
  "memory": "16384",
  "tags": [
    {
      "key": "version",
      "value": "1.0.38"
    }
  ],
  "runtimePlatform": {
    "cpuArchitecture": "ARM64",
    "operatingSystemFamily": "LINUX"
  },
  "ephemeralStorage": {
    "sizeInGiB": 21
  },
  "executionRoleArn": "arn:aws:iam::577638396504:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::577638396504:role/qodo-command-task-role",
  "containerDefinitions": [
    {
      "name": "qodo-command-container",
      "image": "577638396504.dkr.ecr.us-east-2.amazonaws.com/command-sdk:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8080,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "JIRA_AGENT_ACCOUNT_ID",
          "value": "712020:036fed7f-fd94-4a58-9cd5-9405e8d955ff"
        },
        {
          "name": "QODO_BASE_URL",
          "value": "https://api.ng.command.qodo.ai"
        },
        {
          "name": "QODO_BLOCKED_TOOLS",
          "value": "scout-server:dependencies_list,restricted_command"
        },
        {
          "name": "QODO_AGENT_CONFIG_FILE",
          "value": "file:///app/agent.yml"
        },
        {
          "name": "SNYK_WEBHOOK_VALIDATION_ENABLED",
          "value": "true"
        },
        {
          "name": "JIRA_WEBHOOK_VALIDATION_ENABLED",
          "value": "true"
        },
        {
          "name": "MESSAGING_PROVIDER",
          "value": "activemq"
        },
        {
          "name": "MESSAGING_DEFAULT_TOPIC",
          "value": "audit"
        },
        {
          "name": "MESSAGING_EVENT_TOPIC",
          "value": "event"
        },
        {
          "name": "MESSAGING_RESPONSE_TOPIC",
          "value": "response"
        },
        {
          "name": "MESSAGING_ACTIVEMQ_BROKER_URL",
          "value": "ssl://b-e55c53a4-b6e1-41b7-b7a0-a7a9c548fb31-1.mq.us-east-2.amazonaws.com:61617"
        },
        {
          "name": "MESSAGING_ACTIVEMQ_USERNAME",
          "value": "qodo"
        },
        {
          "name": "SERVER_PORT",
          "value": "8080"
        },
        {
          "name": "ATLASSIAN_JIRA_USERNAME",
          "value": "qodo.jira@davidparry.com"
        },
        {
          "name": "ATLASSIAN_JIRA_URL",
          "value": "https://qodo-confluence.atlassian.net"
        }
      ],
      "secrets": [
        {
          "name": "SNYK_TOKEN",
          "valueFrom": "arn:aws:secretsmanager:us-east-2:577638396504:secret:qodo-command/snyk-token-hiN2Cz"
        },
        {
          "name": "ATLASSIAN_JIRA_API_TOKEN",
          "valueFrom": "arn:aws:secretsmanager:us-east-2:577638396504:secret:qodo-command/jira-api-token-wuCCx7"
        },
        {
          "name": "WEBSOCKET_TOKEN",
          "valueFrom": "arn:aws:secretsmanager:us-east-2:577638396504:secret:qodo-command/websocket-token-84HckC"
        },
        {
          "name": "MESSAGING_ACTIVEMQ_PASSWORD",
          "valueFrom": "arn:aws:secretsmanager:us-east-2:577638396504:secret:qodo-command/activemq-password-svIIyi"
        },
        {
          "name": "SNYK_WEBHOOK_SECRET",
          "valueFrom": "arn:aws:secretsmanager:us-east-2:577638396504:secret:qodo-command/snyk-webhook-secret-pFpTXo"
        },
        {
          "name": "JIRA_WEBHOOK_SECRET",
          "valueFrom": "arn:aws:secretsmanager:us-east-2:577638396504:secret:qodo-command/jira-webhook-secret-Wf0tBD"
        },
        {
          "name": "GIT_SSH_PRIVATE_KEY",
          "valueFrom": "arn:aws:secretsmanager:us-east-2:577638396504:secret:qodo-command/git-token-TXM9h9"
        },
        {
          "name": "GITHUB_API_TOKEN",
          "valueFrom": "arn:aws:secretsmanager:us-east-2:577638396504:secret:qodo-command/github-api-token-xjdT5Z"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/qodo-command",
          "awslogs-region": "us-east-2",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:8080/api/ping || exit 1"
        ],
        "interval": 30,
        "timeout": 8,
        "retries": 3,
        "startPeriod": 300
      }
    }
  ]
}